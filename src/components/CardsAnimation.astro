---
import Flutter from "./icons/Flutter.astro";
import React from "./icons/React.astro";
---

<div role="presentation" class="absolute group items-center justify-center scale-125 ml-[56%] hidden lg:flex">
  <div
    class="h-60 w-40 flex flex-col items-center justify-center cursor-move shadow-lg shadow-gray-800 rounded-md mt-10 -rotate-12 duration-200 group-hover:-rotate-[10deg] rainbow"
  >
    <Flutter />
  </div>
  <div
    class="h-60 w-40 flex flex-col items-center justify-center cursor-move shadow-lg shadow-gray-800 rounded-md mt-10 rotate-12 duration-200 group-hover:rotate-[18deg] rainbow"
  >
    <React />
  </div>
</div>

<style>
  @keyframes rotate {
    100% {
      transform: rotate(1turn);
    }
  }

  .rainbow {
    position: relative;
    z-index: 0;
    width: 400px;
    height: 300px;
    border-radius: 10px;
    overflow: hidden;
    padding: 2rem;
  }

  .rainbow::before {
    content: "";
    position: absolute;
    z-index: -2;
    left: -50%;
    top: -50%;
    width: 200%;
    height: 200%;
    background-color: #399953;
    background-repeat: no-repeat;
    background-size: 50% 50%, 50% 50%;
    background-position: 0 0, 100% 0, 100% 100%, 0 100%;
    background-image: linear-gradient(#399953, #399953), linear-gradient(#fbb300, #fbb300), linear-gradient(#d53e33, #d53e33),
      linear-gradient(#377af5, #377af5);
    animation: rotate 4s linear infinite;
  }

  .rainbow::after {
    content: "";
    position: absolute;
    z-index: -1;
    left: 6px;
    top: 6px;
    width: calc(100% - 12px);
    height: calc(100% - 12px);
    background: #1c1c1c;
    border-radius: 5px;
    animation: opacityChange 3s infinite;
  }
</style>
