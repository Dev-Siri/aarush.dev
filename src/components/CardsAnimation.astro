---
import Flutter from "./icons/Flutter.astro";
import React from "./icons/React.astro";

const cardClasses = [
  "h-60 w-40 flex flex-col items-center justify-center cursor-move shadow-lg shadow-gray-800 mt-10 duration-200 relative z-0 rainbow rounded-xl",
  "overflow-hidden p-8 before:content-[''] before:absolute before:-z-20 before:-left-1/2 before:-top-1/2 before:w-[200%] before:h-[200%] before:bg-no-repeat",
  "after:left-[6px] after:top-[6px] after:rounded-md after:bg-semi-dark-gray after:content-[''] after:absolute after:-z-10",
];
---

<div role="presentation" class="absolute group items-center justify-center scale-125 ml-[56%] hidden lg:flex">
  <div class:list={[...cardClasses, "-rotate-12 group-hover:-rotate-[10deg]"]}>
    <Flutter />
  </div>
  <div class:list={[...cardClasses, "rotate-12 group-hover:rotate-[18deg]"]}>
    <React />
  </div>
</div>

<style>
  /* CSS is hard */
  @keyframes rotate {
    100% {
      transform: rotate(1turn);
    }
  }

  .rainbow::before {
    background-color: #399953;
    background-size: 50% 50%, 50% 50%;
    background-position: 0 0, 100% 0, 100% 100%, 0 100%;
    background-image: linear-gradient(#399953, #399953), linear-gradient(#fbb300, #fbb300), linear-gradient(#d53e33, #d53e33),
      linear-gradient(#377af5, #377af5);
    animation: rotate 4s linear infinite;
  }

  .rainbow::after {
    width: calc(100% - 12px);
    height: calc(100% - 12px);
    animation: opacityChange 3s infinite;
  }
</style>
